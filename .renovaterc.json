{
  "extends": ["config:base", "schedule:nonOfficeHours", ":semanticCommits"],
  "postUpdateOptions": ["gomodTidy"],
  "masterIssue": true,
  "masterIssueApproval": true,
  "packageRules": [
    {
      "groupName": "api non-major dependencies",
      "groupSlug": "go-minor-patch",
      "paths": ["*", "api/**"]
    },
    {
      "groupName": "e2e non-major dependencies",
      "groupSlug": "e2e-minor-patch",
      "paths": ["e2e-tests/**"]
    },
    {
      "groupName": "ui non-major dependencies",
      "groupSlug": "ui-minor-patch",
      "paths": ["ui/**"],
      "stabilityDays": 3
    }
  ]
}
